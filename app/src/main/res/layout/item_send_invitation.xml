<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--我发送的请帖-->
    <LinearLayout
        android:id="@+id/item_send_invitation_lay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/com_background_color"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/item_send_invitation_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="婚宴" />

            <TextView
                android:id="@+id/item_send_invitation_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="6.30" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_send_invitation_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0人" />
        </LinearLayout>

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/item_send_invitation_addr_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/com_line_color" />
</LinearLayout>