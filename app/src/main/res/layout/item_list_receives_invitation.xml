<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_list_receives_invitation_img"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@mipmap/user_default"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_list_receives_invitation_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/font_com_title_black_color"
                    android:text="姓名"
                    />
                <TextView
                    android:id="@+id/item_list_receives_invitation_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/font_com_content_black_tint_color"
                    android:gravity="center"
                    android:text="18985121575"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_list_receives_invitation_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/font_com_content_black_tint_color"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="婚礼"
                    />
                <TextView
                    android:id="@+id/item_list_receives_invitation_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/font_com_content_black_tint_color"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="09-26"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/item_list_receives_invitation_addr_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_com_content_black_tint_color"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址"/>
        </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/com_line_color"/>
</LinearLayout>