<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_list_group_type_lay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/com_background_color"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_list_group_type_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="8dp"
            android:drawableLeft="@mipmap/sidekicker_group_icon"
            android:gravity="center"
            android:padding="5dp"
            android:text="朋友"
            android:textColor="@color/font_com_content_black_color" />

        <TextView
            android:id="@+id/item_list_group_type_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="(8)"
            android:textColor="@color/font_com_title_black_color" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/item_list_group_type_operate_img"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/selecter_sidekicker_group_opater_btn" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/com_line_color"/>
</LinearLayout>