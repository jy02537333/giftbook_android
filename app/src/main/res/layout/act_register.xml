<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:background="#fff"
        android:orientation="vertical">

        <pri.zxw.library.view.TitleBar
            xmlns:titleBarStyle="http://schemas.android.com/apk/res-auto"
            android:id="@+id/a_register_title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_h"
            titleBarStyle:text="注册"
            titleBarStyle:left_visibility="visible"
            />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <!-- 分离 -->


        <LinearLayout
            android:id="@+id/a_register_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/a_register_username_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/xuwfb_10"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="#d3d1d1" />

            <EditText
                android:id="@+id/a_register_pwd_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/xuwfb_10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:password="true"
                android:maxLength="20"
                android:textColorHint="#d3d1d1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/a_register_barcode_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/xuwfb_10"
                    android:hint="输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColorHint="#d3d1d1" />

                <Button
                    android:id="@+id/a_register_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/com_color1"
                    android:text="获取"
                    android:textColor="@color/com_base_btn_color" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/a_register_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/a_register_check"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="left"
                    android:paddingLeft="15dp"
                    android:src="@mipmap/f_sidekicker_group_item"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/a_register_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"

                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/a_register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/com_color1"
                android:text="注册"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
